{
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.sfdx": true
    },
    "editor.formatOnSave": true,
    "apexPMD.rulesets": [".pmd/pmd-ruleset.xml"],
    "apexPMD.runOnFileOpen": true,
    "uncrustify.graphicalConfig": false,
    "uncrustify.langOverrides": {
        "apex": "JAVA",
        "apex-anon": "JAVA"
    },
    "salesforcedx-vscode-core.show-cli-success-msg": false,
    "workbench.colorCustomizations": {},
    "git.ignoreLimitWarning": true,
    "prettier.configPath": "config/.prettierrc",
    "prettier.ignorePath": "config/.prettierignore",
    "uncrustify.configPath.osx": "config/uncrustify.cfg"
}
